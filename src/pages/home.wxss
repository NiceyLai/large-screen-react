@charset "UTF-8";
.home {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #010310;
  color: white;
  font-size: 0.6611570248rem;
}

.home > header {
  height: 4.0909090909rem;
  background-size: cover;
}

.home > main {
  padding-top: 1.2396694215rem;
  flex: 1;
  display: grid;
  grid-template: "box1 box2 box4 box5" 755fr "box3 box3 box4 box5" 363fr / 366fr 361fr 811fr 747fr;
  grid-column-gap: 1.1570247934rem;
  grid-row-gap: 1.1570247934rem;
}

.home > main > section {
  text-align: center;
}

.home > main .borderd {
  border: 1px solid #0764bc;
  border-radius: 4px;
  position: relative;
  box-shadow: 0 0 2px 0 #0e325f, inset 0 0 2px 0 #0e325f;
  background: #0c1139;
}

.home > main .borderd::before {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  border-radius: 4px;
  box-shadow: 17px 0 0 -16px #0e325f, -17px 0 0 -16px #0e325f, 0 17px 0 -16px #0e325f, 0 -17px 0 -16px #0e325f, 9px 0 0 -8px #0d4483, -9px 0 0 -8px #0d4483, 0 9px 0 -8px #0d4483, 0 -9px 0 -8px #0d4483;
}

.home > main > .section1 {
  grid-area: box1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.home > main > .section2 {
  grid-area: box2;
}

.home > main > .section3 {
  grid-area: box3;
}

.home > main > .section4 {
  grid-area: box4;
}

.home > main > .section5 {
  grid-area: box5;
}

.home > main .管辖统计 {
  height: 13.0165289256rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.home > main .管辖统计 h2 {
  flex-shrink: 0;
  border: 1px solid #0a5299;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  font-size: 0.9090909091rem;
  line-height: 0.9917355372rem;
  padding: 0.4132231405rem 1.1570247934rem;
  text-shadow: 0 0 0.1239669421rem white;
}

.home > main .管辖统计 .chart {
  flex: 1;
  width: 100%;
}

.home > main .破获排名 {
  height: 17.479338843rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.home > main .破获排名 h2 {
  flex-shrink: 0;
  border: 1px solid #0a5299;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  font-size: 0.9090909091rem;
  line-height: 0.9917355372rem;
  padding: 0.4132231405rem 1.1570247934rem;
  text-shadow: 0 0 0.1239669421rem white;
}

.home > main .破获排名 .chart {
  flex: 1;
  width: 100%;
}

.home > main .破获排名 .legend {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
  padding: 0 0.826446281rem 0.4132231405rem;
}

.home > main .破获排名 .legend > .first,
.home > main .破获排名 .legend > .second {
  display: inline-block;
  width: 0.7438016529rem;
  height: 0.4958677686rem;
  background: red;
  margin: 0 0.4132231405rem;
}

.home > main .破获排名 .legend .first {
  background: linear-gradient(90deg, #2034f9 0%, #04a1ff 100%);
}

.home > main .破获排名 .legend .second {
  background: linear-gradient(90deg, #b92ae8 0%, #6773e7 100%);
}
