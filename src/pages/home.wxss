@charset "UTF-8";
.home {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #010310;
  color: white;
  font-size: 0.6611570248rem;
}

.home > header {
  height: 4.0909090909rem;
  background-size: cover;
  width: 100rem;
  margin: 0 auto;
}

.home > footer {
  height: 2.8099173554rem;
  border: 1px solid #0d2d59;
  margin: 0.826446281rem 0 1px;
  border-radius: 4px;
  background: #0c0d2b;
  display: flex;
  align-items: center;
  justify-content: center;
}

.home > main {
  width: 100rem;
  margin: 0 auto;
  padding-top: 1.2396694215rem;
  flex: 1;
  display: grid;
  grid-template: "box1 box2 box4 box5" 755fr "box3 box3 box4 box5" 363fr / 366fr 361fr 811fr 747fr;
  grid-column-gap: 1.1570247934rem;
  grid-row-gap: 1.1570247934rem;
}

.home > main > section {
  text-align: center;
}

.home > main .bordered {
  border: 1px solid #0764bc;
  border-radius: 4px;
  position: relative;
  box-shadow: 0 0 2px 0 #0e325f, inset 0 0 2px 0 #0e325f;
  background: #0f113a;
}

.home > main .bordered::before {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  border-radius: 4px;
  box-shadow: 17px 0 0 -16px #0e325f, -17px 0 0 -16px #0e325f, 0 17px 0 -16px #0e325f, 0 -17px 0 -16px #0e325f, 9px 0 0 -8px #0d4483, -9px 0 0 -8px #0d4483, 0 9px 0 -8px #0d4483, 0 -9px 0 -8px #0d4483;
}

.home > main > .section1 {
  grid-area: box1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.home > main > .section2 {
  grid-area: box2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.home > main > .section3 {
  grid-area: box3;
}

.home > main > .section4 {
  grid-area: box4;
}

.home > main > .section5 {
  grid-area: box5;
}

.home > main .管辖统计,
.home > main .破获排名,
.home > main .发案趋势,
.home > main .案发时段,
.home > main .战果,
.home > main .籍贯 {
  height: 13.0165289256rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.home > main .管辖统计 h2,
.home > main .破获排名 h2,
.home > main .发案趋势 h2,
.home > main .案发时段 h2,
.home > main .战果 h2,
.home > main .籍贯 h2 {
  flex-shrink: 0;
  border: 1px solid #0a5299;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  font-size: 0.9090909091rem;
  line-height: 0.9917355372rem;
  padding: 0.4132231405rem 1.1570247934rem;
  text-shadow: 0 0 0.1239669421rem white;
}

.home > main .管辖统计 .chart,
.home > main .破获排名 .chart,
.home > main .发案趋势 .chart,
.home > main .案发时段 .chart,
.home > main .战果 .chart,
.home > main .籍贯 .chart {
  flex: 1;
  width: 100%;
}

.home > main .发案趋势,
.home > main .案发时段 {
  height: 15rem;
}

.home > main .籍贯 {
  height: 31.1157024793rem;
  background: transparent;
}

.home > main .籍贯 > .wrapper {
  position: relative;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.home > main .籍贯 > .wrapper .chart {
  flex: 1;
}

.home > main .籍贯 > .wrapper .legend {
  position: absolute;
  top: 1.652892562rem;
  left: 0.826446281rem;
  display: flex;
  align-items: center;
  font-size: 0.9090909091rem;
  padding: 0.826446281rem 0.4132231405rem 0.826446281rem 0;
  border-radius: 0;
